@{
    ViewData["Title"] = "About Us";
}

    <!-- Hero Section -->
    <div class="hero about-hero">

        <h1>About SecureHome AI</h1>
        <p>Protecting homes with next-generation artificial intelligence</p>
    </div>

    <div class="main-content">
        <!-- Company Overview Section -->
        <section class="company-overview">
            <h2>Who We Are</h2>
            <div class="overview-grid">
                <div class="overview-text">
                    <p>SecureHome AI is at the forefront of residential security technology, combining advanced artificial intelligence with robust network monitoring to keep your home safe.</p>
                    <p>Our system learns from your home's normal patterns to detect and prevent potential security breaches before they happen.</p>
                </div>
                <img src="Analytics.png" alt="Security Analytics" class="analytics-image">
            </div>
        </section>

        <!-- Technology Features Table -->
        <section class="features-section">
            <h2>Our Technology Stack</h2>
            <table class="features-table">
                <thead>
                    <tr>
                        <th>Technology</th>
                        <th>Capability</th>
                        <th>Benefit</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>AI Pattern Recognition</td>
                        <td>24/7 behavioral analysis</td>
                        <td>Proactive threat detection</td>
                    </tr>
                    <tr>
                        <td>Network Monitoring</td>
                        <td>Real-time traffic analysis</td>
                        <td>Instant intrusion alerts</td>
                    </tr>
                    <tr>
                        <td>Machine Learning</td>
                        <td>Adaptive security patterns</td>
                        <td>Reduced false alarms</td>
                    </tr>
                </tbody>
            </table>
        </section>

        <!-- Knowledge Base iframe -->
        <section class="knowledge-base">
            <h2>Security Knowledge Base</h2>
            <div class="iframe-container">
                <iframe src="https://www.youtube.com/embed/KBMe0pSAFYU?si=gukL24z_B-y7TLRM"
                        title="Security Best Practices"
                        frameborder="0"
                        allowfullscreen>
                </iframe>
            </div>
        </section>

        <!-- Feature Lists -->
        <section class="key-features">
            <h2>Comprehensive Protection</h2>
            <div class="features-columns">
                <ul class="feature-list">
                    <li>
                        Network Protection
                        <ul>
                            <li>Firewall Management</li>
                            <li>Device Authentication</li>
                            <li>Traffic Monitoring</li>
                        </ul>
                    </li>
                </ul>
                <ul class="feature-list">
                    <li>
                        AI Capabilities
                        <ul>
                            <li>Behavior Analysis</li>
                            <li>Anomaly Detection</li>
                            <li>Pattern Learning</li>
                        </ul>
                    </li>
                </ul>
                <ul class="feature-list">
                    <li>
                        Alert System
                        <ul>
                            <li>Real-time Notifications</li>
                            <li>Mobile Alerts</li>
                            <li>Emergency Response</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </section>
    </div>
